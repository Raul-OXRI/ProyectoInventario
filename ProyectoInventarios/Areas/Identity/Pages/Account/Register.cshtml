@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="flex items-center justify-center min-h-screen bg-gray-200">
    <section class="bg-neutral p-6 rounded-lg shadow-lg w-full max-w-md">
        <h1 class="text-4xl font-bold text-[#6BB39B] mb-6 text-center">@ViewData["Title"]</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-6">
            <h2 class="text-2xl font-semibold text-[#6BB39B] text-center">Create a new account.</h2>
            <hr class="border-[#DAF3EA]" />
            <div asp-validation-summary="ModelOnly" class="text-red-600" role="alert"></div>

            <!-- Email Input -->
            <div class="form-control bg-neutral">
                <label asp-for="Input.Email" class="label text-[#6BB39B] font-semibold">Email</label>
                <input asp-for="Input.Email" class="input bg-[#F7F4E8] text-[#0B0B0D] w-full focus:ring-2 focus:ring-[#6BB39B] outline-none"
                       autocomplete="username" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-red-600 text-sm"></span>
            </div>

            <!-- Password Input -->
            <div class="form-control bg-neutral">
                <label asp-for="Input.Password" class="label text-[#6BB39B] font-semibold">Password</label>
                <input asp-for="Input.Password" class="input bg-[#F7F4E8] text-[#0B0B0D] w-full focus:ring-2 focus:ring-[#6BB39B] outline-none"
                       autocomplete="new-password" placeholder="password" />
                <span asp-validation-for="Input.Password" class="text-red-600 text-sm"></span>
            </div>

            <!-- Confirm Password Input -->
            <div class="form-control bg-neutral">
                <label asp-for="Input.ConfirmPassword" class="label text-[#6BB39B] font-semibold">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" class="input bg-[#F7F4E8] text-[#0B0B0D] w-full focus:ring-2 focus:ring-[#6BB39B] outline-none"
                       autocomplete="new-password" placeholder="password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-sm"></span>
            </div>

            <!-- Submit Button -->
            <div>
                <button id="registerSubmit" type="submit" class="btn bg-[#6BB39B] hover:bg-[#85E6C0] text-white w-full">Register</button>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


